const express = require("express");
const router = express.Router();

//insert model
const staff = require("../models/StaffModel");
//insert staff controller
const StaffControler = require("../controllers/StaffController");

router.get("/", StaffControler.getAllStaff);
router.post("/", StaffControler.addStaff);
router.post("/login", StaffControler.loginStaff);
router.get("/employee/:employeeId", StaffControler.getByEmployeeId);
router.get("/:id", StaffControler.getById);
router.put("/:id", StaffControler.updateStaff);
router.delete("/:id", StaffControler.deleteStaff);


//export
module.exports = router;
 